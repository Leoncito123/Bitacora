<style>
/* Estilos adicionales para asegurar que la línea de tiempo se vea en móvil */
.timeline-item {
    position: relative;
}

/* Asegurar que la línea vertical se vea en móvil */
@media (max-width: 768px) {
    .timeline-item::before {
        content: '';
        position: absolute;
        left: 1.25rem; /* 20px - posición del centro del icono */
        top: 2.5rem; /* después del icono */
        bottom: -2rem; /* conectar con el siguiente elemento */
        width: 2px;
        background: linear-gradient(to bottom, transparent, #cbd5e1, transparent);
        z-index: 0;
    }
    
    /* Remover la línea del último elemento */
    .timeline-item:last-child::before {
        display: none;
    }
    
    /* Asegurar que los iconos estén por encima de la línea */
    .timeline-icon {
        position: relative;
        z-index: 10;
    }
    
    /* Ajustar las tarjetas */
    .timeline-card {
        position: relative;
        z-index: 5;
    }
}

/* Mejorar la responsividad de las imágenes */
.timeline-image {
    max-height: 250px;
    object-fit: cover;
}

@media (max-width: 640px) {
    .timeline-image {
        max-height: 200px;
    }
}
</style>
